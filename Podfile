platform :ios, "10.0"

source 'https://github.com/CocoaPods/Specs.git'

target 'SwiftStudy' do
  ### Swift
  ## 扩展
  pod 'SwifterSwift/SwiftStdlib', '5.2.0' # https://github.com/SwifterSwift/SwifterSwift
  pod 'SwifterSwift/Foundation', '5.2.0'
  pod 'SwifterSwift/UIKit', '5.2.0'
  pod 'SwifterSwift/CoreGraphics', '5.2.0'
  pod 'SwifterSwift/Dispatch', '5.2.0'

  ## 函数响应式编程
  # Rx 核心
  pod 'RxSwift', '6.5.0' # https://github.com/ReactiveX/RxSwift
  pod 'RxCocoa', '6.5.0'
  # 手势
  pod 'RxGesture', '4.0.4' # https://github.com/RxSwiftCommunity/RxGesture
  # DisposeBag 扩展
  pod 'NSObject+Rx', '5.2.2' # https://github.com/RxSwiftCommunity/NSObject-Rx

  ## 数据操作
  # 网络数据解析；等有使用 Alamofire 再使用 Moya 进行数据映射到实体
  # pod 'Moya/RxSwift', '15.0.0'  # https://github.com/Moya/Moya
  # pod 'Moya-ObjectMapper/RxSwift', '2.9'  # https://github.com/ivanbruel/Moya-ObjectMapper
  pod 'BetterCodable', '0.4.0' # https://github.com/marksands/BetterCodable

  # 处理富文本
  pod 'SwiftRichString', '3.7.2' # https://github.com/malcommac/SwiftRichString

  ## 数据缓存
  # 钥匙串
  pod 'KeychainAccess', '4.2.2' # https://github.com/kishikawakatsumi/KeychainAccess
  # UserDefaults；Xcode 13 打包报错先不用
  # pod 'Defaults', '4.2.2'  # https://github.com/sindresorhus/Defaults
  # Sqlite【iOS 11 下才能用 5.12.0】
  pod 'GRDB.swift', '5.11.0' # https://github.com/groue/GRDB.swift
  pod 'RxGRDB', '2.0.0' # https://github.com/RxSwiftCommunity/RxGRDB

  ## UI
  # 布局约束
  pod 'SnapKit', '5.0.1' # https://github.com/SnapKit/SnapKit
  # 分页
  pod 'JXPageControl', '0.1.5' # https://github.com/Coder-TanJX/JXPageControl
  # 动画【iOS 11 下才能用 3.3.0】
  pod 'lottie-ios', '3.2.3' # https://github.com/airbnb/lottie-ios
  # 网络图片【iOS 11 下才能用 version6-xcode13】
  pod 'Kingfisher', '4.10.1' # https://github.com/onevcat/Kingfisher
  # 转场过渡
  pod 'Hero', '1.6.1' # https://github.com/lkzhao/Hero
  # 向下拖拽关闭
  pod 'PanModal', '1.2.7' # https://github.com/slackhq/PanModal

  ## 其他
  # 日期时间
  pod 'SwiftDate', '6.3.1' # https://github.com/malcommac/SwiftDate
end